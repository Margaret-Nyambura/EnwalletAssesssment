


    <androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView
        android:id="@+id/ivIncome"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/income" />

    <TextView
        android:id="@+id/tvMoneyin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="MONEY IN"
        app:layout_constraintStart_toEndOf="@+id/ivIncome"
        app:layout_constraintTop_toTopOf="@+id/ivIncome" />

    <TextView
        android:id="@+id/tvKes1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="KES 24300"
        app:layout_constraintStart_toEndOf="@+id/ivIncome"
        app:layout_constraintTop_toBottomOf="@+id/tvMoneyin" />

    <ImageView
        android:id="@+id/ivMoneyout"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginStart="68dp"
        app:layout_constraintStart_toEndOf="@+id/tvMoneyin"
        app:layout_constraintTop_toTopOf="@+id/tvMoneyin"
        app:srcCompat="@drawable/expense" />

    <TextView
        android:id="@+id/tvMoneyout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="MONEY OUT"
        app:layout_constraintStart_toEndOf="@+id/ivMoneyout"
        app:layout_constraintTop_toTopOf="@+id/ivMoneyout" />

    <TextView
        android:id="@+id/tvKes2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="KES 23700"
        app:layout_constraintStart_toEndOf="@+id/ivMoneyout"
        app:layout_constraintTop_toBottomOf="@+id/tvMoneyout" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivIncome"
        app:srcCompat="@drawable/balance" />

    <TextView
        android:id="@+id/tvBal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="BALANCE"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tvKes3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="KES 18700"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/tvBal" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/tvBal"
        app:layout_constraintTop_toBottomOf="@+id/ivMoneyout"
        app:srcCompat="@drawable/transactions" />

    <TextView
        android:id="@+id/tvTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TRANSACTIONS"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/tvKes4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/tvTrans" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWallet"
        android:layout_width="0dp"
        android:layout_height="565dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:listitem="@layout/wallet_list_item" />


</androidx.constraintlayout.widget.ConstraintLayout>
